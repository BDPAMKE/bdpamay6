              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Customer
              </a>
              <!-- Set up options for dropdown section--> <!-- href links are temporary placeholders here-->
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#"> Add </a></li> <!-- First dropdown item-->
                <li><hr class="dropdown-divider"></li> <!-- Horizontal rule to act as divider-->
